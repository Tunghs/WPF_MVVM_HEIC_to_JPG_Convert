<UserControl x:Class="HEICtoJpgConvert.View.ConvertView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModel="clr-namespace:HEICtoJpgConvert.ViewModel"
             xmlns:SHControls="clr-namespace:SHControls.Controls;assembly=SHControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <ViewModel:ConvertViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
            <SHControls:FilePathTextBox Height="50" Width="500" ControlName="이미지 경로"
                                        FilePath="{Binding SourcePath, Mode=TwoWay}"/>

            <Button Content="Convert" Margin="0 20" Height="60"
                    Command="{Binding ButtonClickCommand}" CommandParameter="Convert"/>
        </StackPanel>
    </Grid>
</UserControl>
