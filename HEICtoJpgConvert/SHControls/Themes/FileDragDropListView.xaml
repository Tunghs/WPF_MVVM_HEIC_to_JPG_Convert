<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:SHControls.Controls">

    <Style TargetType="{x:Type Controls:FileDragDropListView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:FileDragDropListView}">
                    <Grid>
                        <ListView x:Name="PART_ListView" FontSize="12" BorderThickness="1" 
                                      ItemsSource="{Binding CollectionFileList}" SelectedItem="{Binding SellectedListItem, Mode=TwoWay}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="No" Width="35" DisplayMemberBinding="{Binding FileNo}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>